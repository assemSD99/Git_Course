@model List<TODO>


<table class="table table-hover table-dark table-bordered">
    <thead>
        <tr>
            <th>
                Libelle
            </th>
            <th>
                Description
            </th>
            <th>
                State
            </th>
            <th>
                DateLimite
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (TODO t in Model)
        {
            <tr>
                <td>
                    @t.Libelle
                </td>
                <td>
                    @t.Description
                </td>
                <td>
                    @t.State
                </td>
                <td>
                    @t.DateLimite
                </td>
                <td>
                    <a onclick="return confirm('Etes vous sur de vouloir supprimer ce produit ?')" class="btn btn-danger" asp-controller="Todo" asp-action="Delete" asp-route-id="@t.Id">Supprimer</a>
                    <a class="btn btn-warning" asp-controller="Todo" asp-action="Update" asp-route-id="@t.Id">Modifier</a>
                </td>
            </tr>
        }
    </tbody>
</table>

